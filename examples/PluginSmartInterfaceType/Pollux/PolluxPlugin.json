{
  "$schema": "plugin.schema.json",
  "info": {
    "title": "Pollux Plugin",
    "callsign": "Pollux",
    "locator": "libThunderPollux.so",
    "status": "alpha",
    "version": "1.0"
  },
  "configuration": {
    "type": "object",
    "required": [ "configuration" ],
    "description": "Pollux service configuration",
    "properties": {
      "configuration": {
        "type": "object",
        "required": [ "etymology" ],
        "properties": {
          "Polluxcallsign": {
            "type": "string",
            "description": "Callsign of the Yin service (typically *Yin*)"
          },
          "etymology": {
            "type": "string",
            "description": "Describes the meaning of Pollux"
          },
          "color": {
            "type": "string",
            "description": "Default color of Pollux"
          }
        }
      }
    }
  },
  "interface": {
    "$ref": "{cppinterfacedir}/IPollux.h"
  }
}
