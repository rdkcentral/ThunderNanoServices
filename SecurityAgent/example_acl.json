{
  "assign": [
    {
      "url": "*://localhost",
      "role": "local"
    },
    {
      "url": "*://localhost:*",
      "role": "local"
    },
    {
      "url": "*://127.0.0.1",
      "role": "local"
    },
    {
      "url": "*://127.0.0.1:*",
      "role": "local"
    },
    {
      "url": "*://[::1]",
      "role": "local"
    },
    {
      "url": "*://[::1]:*",
      "role": "local"
    },
    {
      "url": "*://[0:0:0:0:0:0:0:1]",
      "role": "local"
    },
    {
      "url": "*://[0:0:0:0:0:0:0:1]:*",
      "role": "local"
    },
    {
      "url": "file://*",
      "role": "local"
    },
    {
      "url": "*://*.comcast.com",
      "role": "comcast"
    },
    {
      "url": "*://metrological.com",
      "role": "metrological"
    },
    {
      "url": "*",
      "role": "default"
    }
  ],
  "roles": {
    "default" : {
      "default" : "blocked"
    },
	"local" : {
      "default" : "allowed"
    },
    "metrological": {
      "default": "blocked",
      "DeviceInfo": {
        "default": "allowed",
        "methods": [ "register", "unregister" ]
      },
	  "JSONRPCPlugin": {
		"default": "blocked",
		"methods": [ "time", "status" ]
	  }
    },
    "comcast": {
      "default": "blocked",
      "Compositor": {
        "default": "allowed"
      }
    }
  }
}
